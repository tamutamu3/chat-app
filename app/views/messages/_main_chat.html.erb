<div class="chat_top">
  <div class="top_left">
    <div class="chat_name">
      Sunflower
    </div>
  </div>
  <div class="top_right">
    <div class="end_btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper_message">
        <div class="message_user">Hinata</div>
        <div class="message_date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower_message">
      <div class="message_content">おはよう</div>
    </div>
  </div>

 <div class="message">
    <div class="upper_message">
      <div class="message_user">Tom</div>
      <div class="message_date">2020/3/31(Wed) 12:47:30</div>
    </div>
    <div class="lower_message">
      <div class="message_content">こんばんは</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>